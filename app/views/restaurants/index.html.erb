<div class="container">
  <h1>Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
  <div class="card">
    <h2><%= restaurant.name %></h2>
    <p><%= restaurant.address %> ||
    <strong><%= restaurant.category.capitalize %> restaurant</strong>
    </p>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
    <%= link_to "Give a rating", new_restaurant_review_path(restaurant), class: "btn btn-warning"%>
    <% end %>
  </div>
</div>